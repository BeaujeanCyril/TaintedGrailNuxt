generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id              Int              @id @default(autoincrement())
  name            String
  locations       Location[]
  characters      Character[]
  campaignStatuses CampaignStatus[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

// Statuts globaux (seedes)
model Status {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  checkboxCount   Int              // Nombre de checkbox (1 a N)
  campaignStatuses CampaignStatus[]
}

// Statuts par campagne (quelles checkbox sont cochees)
model CampaignStatus {
  id              Int       @id @default(autoincrement())
  checkedBoxes    String    @default("") // Liste des numeros coches separes par virgule "1,3,5"
  campaignId      Int
  campaign        Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  statusId        Int
  status          Status    @relation(fields: [statusId], references: [id], onDelete: Cascade)

  @@unique([campaignId, statusId])
}

model Character {
  id            Int       @id @default(autoincrement())
  characterType String    // "Iunis", "Gerdwyn", "Elgan", "Osbert"
  playerName    String    // Prenom du joueur

  // Ressources
  food          Int       @default(0)  // Nourriture
  wealth        Int       @default(0)  // Richesse
  experience    Int       @default(0)  // Experience
  magic         Int       @default(0)  // Magie

  // Stats
  energy        Int       // Energie (valeur initiale selon personnage)
  health        Int       // Sante (valeur initiale selon personnage)
  terror        Int       @default(0)  // Terreur

  campaignId    Int
  campaign      Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([campaignId, characterType])
}

model Location {
  id          Int       @id @default(autoincrement())
  number      Int
  name        String
  dream       String?   // Texte pour le Reve
  nightmare   String?   // Texte pour le Cauchemar
  hasMenhir   Boolean   @default(false)
  menhirNote  String?   // Annotation sur le menhir
  notes       String?
  entries     Entry[]   // Relation vers les entrees
  campaignId  Int
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([campaignId, number])
}

model Entry {
  id          Int       @id @default(autoincrement())
  number      Int       // Numero de l'entree
  info        String?   // Information/description
  status      String?   // "explored", "partial", "unknown"
  locationId  Int
  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([locationId, number])
}
