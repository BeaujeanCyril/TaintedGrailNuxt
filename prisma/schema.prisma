generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Location {
  id          Int       @id @default(autoincrement())
  number      Int       @unique
  name        String
  dreammare   String?   @db.VarChar(20) // "dream", "nightmare", ou null
  hasMenhir   Boolean   @default(false)
  entries     String?   @db.Text // Liste des entrées séparées par des virgules
  status      String?   @db.VarChar(50) // "explored", "partial", "unknown"
  notes       String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
